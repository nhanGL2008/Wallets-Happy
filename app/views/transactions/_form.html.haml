= simple_form_for(@transaction, html: {class: 'form=horizontal'}) do |f|
  = f.input :money, label: "Money: "
  = f.date_select :day, { start_year: 100.years.ago.year, end_year: Date.today.year, default: Date.today}, label: "Date: "
  -#= f.text_field :day, hide_label: true, class: 'datepicker'
  = f.collection_select :category_id, Category.all, :id, :name, {promt: 'Category'}, class: 'btn btn-lg'
  = f.collection_select :wallet_id, Wallet.all, :id, :name, {promt: 'Wallet'}, class: 'btn btn-lg'
  = f.input :note, label: "Note: "
  %br
  = f.button :submit